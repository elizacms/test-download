<h1>
  Releases Index
  <%= link_to 'Create New Release Candidate', new_release_path, class: 'btn lg black pull-right' %>
</h1>

<table class='table table-hover'>
  <thead class='thead-default'>
    <th>Message</th>
    <th>State</th>
  </thead>
  <tbody>
    <% @releases.each do |release| %>
      <tr>
        <td>
          <%= link_to(
            @repo.lookup(release.commit_sha).message,
            release.state == 'unreviewed' ? review_release_path( release ) : accept_or_reject_path( release )
          ) %>
        </td>
        <td><%= release.state %></td>
      </tr>
    <% end %>
  </tbody>
</table>
