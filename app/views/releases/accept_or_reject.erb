<h1>Approve Release Candidate</h1>

<h3>NLU Training</h3>
<h4>Last Job:</h4>
<br>
<div class='nluTraining'>
  <p>Name: <%= @last_build['fullDisplayName'] %></p>
  <p>
    Result:
    <span class='<%= class_for_build( @last_build['result'] ) %>'>
      <%= @last_build['result'] %>
    </span>
  </p>
  <p>Time: <%= Time.at(@last_build['timestamp'].to_i / 1000) %></p>
  <p>Jenkins Link: <%= link_to @last_build['url'] %></p>
</div>
<hr>
<h3>Diff</h3>
<%= render partial: '/releases/diff' %>

<div class="text-center">
  <%= form_tag '/releases/approval_or_rejection' do %>
    <%= hidden_field_tag 'release_id', @release_id %>
    <% if @release.state == 'in_training' %>
      <%= submit_tag 'Accept', class: "btn xl" %>
      <%= submit_tag 'Reject', class: "btn xl red" %>
    <% end %>
  <% end %>
</div>
