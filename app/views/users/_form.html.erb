<%= form_for @user do | f |%>
  Email:<%= f.email_field :email %>
  <%= f.check_box :role_admin %>Admin
  <%= f.check_box :role_developer %>Developer
  <%= f.submit 'Submit' %>
<% end %>

<% if !@user.new_record? %>
  <%= link_to "Delete this user", user_path(@user), method: :delete, data: { confirm: "Are you sure you want to delete this user?" } %>
<% end %>
