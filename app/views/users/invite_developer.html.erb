<%= link_to(
  "&larr; Developers".html_safe,
  users_developers_path,
  class: "btn md grey"
) %>

<h1>Invite Developer for the <%= @skill.name %> skill:</h1>

<div class="row">
  <div class="offset-sm-2 col-sm-8">
    <%= form_for User.new do |f| %>
      <label>Email</label>
      <%= hidden_field_tag 'skill_id', @skill.id %>
      <%= f.email_field :email %>

      <br><br>
      <%= f.submit 'Submit', class: "btn lg black pull-right user-form-submit" %>
    <% end %>
  </div>
</div>
