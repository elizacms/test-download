<h2>
  <div class="pull-left">Total Users: <%= @users.count %></div>
  <a class="btn black lg pull-right" href='/users/new'>Invite new User</a>
</h2>

<table class="table table-hover">
  <thead class="thead-default">
    <tr>
      <th>Email</th>
      <th>Admin</th>
      <th></th>
    </tr>
  </thead>
<% @users.each do |u| %>
  <tr>
    <td><%= u.email %></td>
    <td class='<%= u.has_role?('admin', nil) ? "icon-check" : "icon-cross" %>'></td>
    <td><%= link_to( "Edit", edit_user_path(u.id), class: "btn sm black" ) %></td>
  </tr>
<% end %>
</table>
