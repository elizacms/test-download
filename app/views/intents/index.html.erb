<%= link_to(
  "&larr; Skills".html_safe,
  skills_path,
  class: "btn md grey"
) %>
<h2>
  <%= pluralize @intents.count, 'Intent' %>
  <a href='<%= new_skill_intent_path @skill.id %>'
     class="btn md black pull-right">Create new Intent</a>
</h2>
<br>

<table class="table table-hover">
  <thead class="thead-default">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <% @intents.each do |intent| %>
    <tr>
      <td><%= intent.name %></td>
      <td><%= intent.description %></td>
      <td><%= link_to "Edit Details", edit_skill_intent_path( @skill, intent ) %></td>
      <td><%= link_to "Edit Fields", fields_page_path( @skill, intent ) %></td>
      <td><%= link_to "Edit Dialogs", dialogs_page_path( @skill, intent ) %></td>
    </tr>
  <% end %>
</table>
