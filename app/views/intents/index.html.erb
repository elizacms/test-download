<%= link_to(
  "&larr; Skills".html_safe,
  skills_path,
  class: "btn md grey"
) %>
<h2>
  <%= pluralize @intents.count, 'Intent' %>
  <a href='<%= new_skill_intent_path @skill.id %>'
     class="btn md black pull-right">Create new Intent</a>
</h2>
<br>

<table class="table table-hover">
  <thead class="thead-default">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Requires Auth</th>
      <th>Apps</th>
      <th></th>
    </tr>
  </thead>
  <% @intents.each do |intent| %>
    <tr>
      <td><%= intent.name %></td>
      <td><%= intent.description %></td>
      <td class="<%= intent.requires_authorization? ? "icon-check" : "icon-cross" %>"></td>
      <td>
        <% intent.external_applications.each do |app| %>
          <code><%= app %></code>
        <% end %>
      </td>
      <td>
        <%= link_to(
          "Edit Details",
          edit_skill_intent_path( @skill, intent ),
          class: 'btn sm black'
        )%>
      </td>
    </tr>
  <% end %>
</table>
