<h1>Entities</h1>
<table class='table table-hover'>
  <thead class='thead-default'>
    <tr>
      <th>Name</th>
      <th>Locked By</th>
      <th>Attached File</th>
    </tr>
  </thead>
  <tbody>
    <% @field_data_types.each do |fdt| %>
      <tr>
        <td><%= link_to fdt.name, field_data_type_path( fdt ) %></td>
        <td><%= User.find_by(id: fdt.file_lock.try(:user_id)).try(:email) %></td>
        <td><%= fdt.files.present? ? File.basename( fdt.files.first ) : nil %></td>
      </tr>
    <% end %>
  </tbody>
</table>
