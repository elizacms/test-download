<%= link_to(
  "&larr; Skills".html_safe,
  skills_path,
  class: "btn md grey"
) %>

<% if user_owns_skill_or_is_admin?( @current_user, @skill ) %>
  <%= link_to(
    "Delete this skill",
    skill_path(@skill),
    method: :delete,
    data: {
      confirm: "Are you sure you want to delete this skill?"
    },
    class: "btn sm red pull-right"
  ) %>
<% end %>

<h1>Edit <%= @skill.name %></h1>

<%= render partial: "form" %>
