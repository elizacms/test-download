<div class='fields'>
  <div class='row notes collapse'>
    <div class='col-xs-12'>
      <div class='pull-left'>
        Server Response Time: <span class='server-time'></span> ms
      </div>
      <div class='pull-right'>
        URL: <span class='url-used'></span>
        <a href='#' class='btn sm grey curlDetails' data-toggle='modal' data-target='#curlModal-<%= name %>'>
          Curl Command
        </a>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-xs-12'>
      <textarea class='codeArea hidden-xs-up'></textarea>
      <button class='btn sm grey pull-right copyBtnMain collapse'>Copy</button>
      <span class='pull-right copyConfirm collapse'>Copied!</span>
    </div>
  </div>
</div>

<div class='modal fade' id='curlModal-<%= name %>' tabindex='-1' role='dialog'>
  <div class='modal-dialog modal-lg' role='document'>
    <div class='modal-content'>
      <div class='modal-header'>
        Curl Command
        <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
          <span aria-hidden='true'>&times;</span>
        </button>
      </div>
      <div class='modal-body'>
        <div class='row'>
          <div class='col-xs-12'>
            <button class='btn lg grey pull-right copyBtnCurl'>Copy to Clipboard</button>
            <span class='pull-right copyConfirm collapse'>Copied!</span>
          </div>
        </div>
        <div class='row'>
          <div class='col-xs-12'>
            <pre><code class='json modalCode'></code></pre>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

